<odoo>
    <record id="view_demo_insecure_tree" model="ir.ui.view">
        <field name="name">demo.insecure.tree</field>
        <field name="model">demo.insecure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_demo_insecure_form" model="ir.ui.view">
        <field name="name">demo.insecure.form</field>
        <field name="model">demo.insecure</field>
        <field name="arch" type="xml">
            <form string="Demo Insecure">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>